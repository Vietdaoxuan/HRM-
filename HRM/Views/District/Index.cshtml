@model HRM.Models.LSDistrict

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">

<h2 id="title"></h2>

<ul class="nav nav-pills" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" id="Tlist-tab" href="#list">List</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" onclick="AddDistrict(0)" id="Infor-tab" data-toggle="tab" href="#Infor"></a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade in active" id="list" style="margin-top:35px">
        <table class="display" id="listDistrict">
            <thead>
                <tr>
                    <th>LSDistrictID</th>
                    <th>LSDistrictCode</th>
                    <th>Name</th>
                    <th>Used</th>
                </tr>
            </thead>

        </table>
    </div>

    <div id="Infor" class="tab-pane fade" style="position:absolute;top:12em">
        <form id="form">
            <fieldset id="Submitform">

                <input type="hidden" id="LSDistrictID" name="LSDistrictID">

                <div class="form-group col-md-10">
                    <label for="LSDistrictCode" class="control-label col-md-2">Code</label>
                    <input type="text" class="form-control" id="LSDistrictCode" name="LSDistrictCode" />
                </div>

                <div class="form-group col-md-10">
                    <label for="LSProvinceID" class="control-label col-md-2">LSProvinceID</label>
                    @Html.DropDownList("LSProvinceID", (IEnumerable<SelectListItem>)ViewBag.Province, "--Select Province--", htmlAttributes: new { @class = "form-control", @id = "LSProvinceID" })
                </div>

                <div class="form-group col-md-10">
                    <label for="Name" class="control-label col-md-2">Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" />
                </div>

                <div class="form-group col-md-10">
                    <label for="Rank" class="control-label col-md-2">Rank</label>
                    <input type="text" class="form-control" id="Rank" name="Rank" />
                </div>

                <div class="form-group col-md-10">
                    <label for="Note" class="control-label col-md-2">Note</label>
                    <input type="text" class="form-control" id="Note" name="Note" />
                </div>

                <div class="form-group col-md-10">
                    @Html.LabelFor(model => model.Used, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Used, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input value="Save" class="btn btn-default" id="SaveDistrict" />
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <script>
        $(document).ready(function (res) {
            document.getElementById("title").innerHTML = "Index";
            document.getElementById("Infor-tab").innerHTML = "Create";
            $('#listDistrict').DataTable({
                ajax: {
                    url: "/api/DistrictAPI/GetAll",
                    type: "Get",
                    datatype: "json",
                    dataSrc: ""
                },

                "columns": [
                    {
                        "targets": [0],
                        "data": "LSDistrictID"
                    },
                    {
                        "targets": [1],
                        "data": "LSDistrictCode"
                    },
                    {
                        "targets": [2],
                        "data": "Name"
                    },
                    {
                        "targets": [3],
                        "data": "Used"
                    },
                    {
                        "targets": [4],
                        "data": "LSDistrictID",
                        "render": function (data, type, row, meta) {
                            return "<a class = 'btn btn-warning nav-link' href = '#Infor' data-toggle='tab' onclick = 'EditDistrict(\"" + data + "\")'>Edit</a>" +
                                   " <a class = 'btn btn-danger' onclick = 'DeleteDistrict(\"" + data + "\")'>Delete</a>";
                        }
                    },
                ],
                "serverside": "true",
                'order': [0, "asc"],
            });
            $("#listDistrict_filter input").prop('id', 'search_box');
            $("#search_box").css({
                "borderRadius": "11px", "height": "40px", "border": "1px solid gainsboro"
            });
            $("#search_box").focus(function () {
                $("#search_box").css({ "outline": "none" });
            })
        })

        $('#listDistrict thead tr').append('<th/>');

        $("#Tlist-tab").click(function () {
            document.getElementById("title").innerHTML = "Index";
            document.getElementById("Infor-tab").innerHTML = "Create";
            document.getElementById("list").style.height = "0em";
        })

        function AddDistrict(LSDistrictID) {
            document.getElementById("myTabContent").style.marginBottom = '27em';
            $("#LSDistrictID").val("");
            $("#LSDistrictCode").val("");
            $("#LSProvinceID").val("");
            $("#Name").val("");
            $("#Rank").val("");
            $("#Note").val("");
            document.getElementById("title").innerHTML = "Create New";
            document.getElementById("Infor-tab").innerHTML = "Create";
            document.getElementById("list").style.height = '26em';
            $("#SaveDistrict").click(function () {
                var data = $("#Submitform").serialize();
                $.ajax({
                    type: "Post",
                    url: "/api/DistrictAPI/Create",
                    data: data,
                    success: function (response) {
                        alert("Success!");
                        window.location.href = "/District/Index";
                    }
                })
            })
        }

        function EditDistrict(ID) {
            console.log(ID);
            document.getElementById("title").innerHTML = "Edit Record";
            document.getElementById("Infor-tab").innerHTML = "Edit";
            document.getElementById("myTabContent").style.marginBottom = "26em";
            $("#Infor-tab").tab('show');
            $.ajax({
                type: 'GET',
                url: '/api/DistrictAPI/GetDataByID/' + ID,
                dataType: 'json',
                success: function (data) {
                    console.log(data);
                    for (var i = 0; i < data.length; i++) {
                        if (data[i].LSDistrictID === ID) {
                            $("#LSDistrictID").val(data[i].LSDistrictID);
                            $("#LSDistrictCode").val(data[i].LSDistrictCode);
                            $("#LSProvinceID").val(data[i].Name);
                            $("#Name").val(data[i].Name);
                            $("#Rank").val(data[i].Rank);
                            $("#Note").val(data[i].Note);
                            break;
                        }
                    }
                }
            });
            $("#SaveDistrict").click(function () {
                console.log(LSDistrictID);
                var data = $("#Submitform").serialize();
                $.ajax({
                    type: "Put",
                    url: '/api/DistrictAPI/Update/' + ID,
                    data: data,
                    success: function (response) {
                        alert("success!")
                        window.location.href = "/District/Index";
                    }
                })
            })
        }

        function DeleteDistrict(LSDistrictID) {
            console.log(LSDistrictID);
            swal({
                title: "Are you sure?",
                text: "You will not be able to recover this record!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Yes, Delete it!",
                cancelButtonText: "No, cancel plx!",
                closeOnConfirm: false,
                closeOnCancel: false
            },
            function (isConfirm) {
                if (isConfirm) {
                    $.ajax({
                        type: 'Post',
                        url: '/api/DistrictAPI/Delete/' + LSDistrictID,
                        success: function (response) {
                            window.location.href = "/District/Index";
                        },
                        error: function (data) {
                            swal("NOT Deleted!", "Something went wrong.", "error");
                        }
                    });
                } else {
                    swal("Cancelled", "Your record is safe :)", "error");
                }
            });
        return false;
        }
    </script>
}
